{
    "version": 2,
    "installCommand": "pip install -r requirements.txt",
    "devCommand": "gunicorn ml_server:app",
    "functions": {
        "api/**": {
        "memory": 1024,
        "maxDuration": 60,
        "excludeFiles": ".next/**,*.cache/**,node_modules/**,public/**,app/**,static/**,venv/**"
        }
    },
    "routes": [
        {
        "src": "/(.*)",
        "dest": "api/ml_server.py"
        }
    ]
}